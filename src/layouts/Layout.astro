---
import Analytics from '@vercel/analytics/astro'

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'Technical writings on software, systems, and craft.',
  ogImage,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://ishanbagchi.com');
const base = import.meta.env.BASE_URL.replace(/\/$/, ""); 
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <script is:inline>
      (function () {
        var r = document.documentElement;

        // ── Theme ──────────────────────────────────────────────
        var stored = localStorage.getItem('theme');
        var systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        r.setAttribute('data-theme', stored ?? (systemDark ? 'dark' : 'light'));

        // ── CSS variable preferences ───────────────────────────
        var vars = ['prose-font-size', 'prose-line-height', 'prose-max-width', 'code-font-size'];
        for (var i = 0; i < vars.length; i++) {
          var val = localStorage.getItem(vars[i]);
          if (val) r.style.setProperty('--' + vars[i], val);
        }

        // ── Boolean class preferences ──────────────────────────
        if (localStorage.getItem('show-reading-time') === '0') r.classList.add('hide-reading-time');
        if (localStorage.getItem('wrap-code') === '1')         r.classList.add('wrap-code');
        if (localStorage.getItem('show-lang-label') === '0')   r.classList.add('hide-lang-label');
        if (localStorage.getItem('show-line-numbers') === '0') r.classList.add('hide-line-numbers');
      })();
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Inter:wght@300;400;500&family=JetBrains+Mono:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <slot />
    <Analytics />
  </body>
</html>

<style is:global>
  /* ─── Reset ─────────────────────────────────────────────── */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  /* ─── Design tokens — dark (default) ───────────────────── */
  :root,
  [data-theme='dark'] {
    /* Background */
    --color-bg:            #09090e;
    --color-surface:       #0e0e17;
    --color-border:        #1c1c2e;
    --color-border-subtle: #141420;

    /* Gold accent */
    --color-gold:       #c8a96e;
    --color-gold-dim:   #7a6240;
    --color-gold-muted: rgba(200, 169, 110, 0.08);

    /* Text */
    --color-text:       #e8e4d9;
    --color-text-muted: #6b6585;
    --color-text-dim:   #9490a8;

    /* Header glass */
    --color-header-bg: rgba(9, 9, 14, 0.85);
  }

  /* ─── Design tokens — light ─────────────────────────────── */
  [data-theme='light'] {
    /* Background */
    --color-bg:            #faf9f5;
    --color-surface:       #f2f0ea;
    --color-border:        #dedad0;
    --color-border-subtle: #e8e4da;

    /* Gold accent — slightly deeper for contrast on light */
    --color-gold:       #9a6e32;
    --color-gold-dim:   #c9a97a;
    --color-gold-muted: rgba(154, 110, 50, 0.08);

    /* Text */
    --color-text:       #1a1814;
    --color-text-muted: #78706a;
    --color-text-dim:   #504840;

    /* Header glass */
    --color-header-bg: rgba(250, 249, 245, 0.88);
  }

  /* ─── Shared tokens (layout, typography, spacing) ────────── */
  :root {

    /* Typography */
    --font-serif: 'Cormorant Garamond', Georgia, serif;
    --font-sans:  'Inter', system-ui, sans-serif;
    --font-mono:  'JetBrains Mono', 'Fira Code', monospace;

    /* Transitions */
    --transition-theme: background-color 0.25s ease, color 0.25s ease,
                        border-color 0.25s ease;

    /* Spacing scale */
    --space-1:  0.25rem;
    --space-2:  0.5rem;
    --space-3:  0.75rem;
    --space-4:  1rem;
    --space-6:  1.5rem;
    --space-8:  2rem;
    --space-12: 3rem;
    --space-16: 4rem;
    --space-24: 6rem;

    /* Layout */
    --max-width:      42rem;
    --max-width-wide: 62rem;

    /* Reading preferences (overridable via settings page) */
    --prose-font-size:   1.0625rem;
    --prose-line-height: 1.85;
    --prose-max-width:   42rem;
    --code-font-size:    0.875rem;
  }

  /* ─── Smooth theme transitions ─────────────────────────── */
  html {
    transition: var(--transition-theme);
  }

  /* ─── Shiki syntax highlighting — dual theme ─────────────── */
  /*
    Astro/Shiki emits --shiki-dark / --shiki-light CSS variables on each span.
    We show the correct palette by switching which variable is used.
  */
  .astro-code,
  .astro-code span {
    color:            var(--shiki-dark) !important;
    background-color: var(--shiki-dark-bg) !important;
    font-style:       var(--shiki-dark-font-style) !important;
    font-weight:      var(--shiki-dark-font-weight) !important;
  }

  [data-theme='light'] .astro-code,
  [data-theme='light'] .astro-code span {
    color:            var(--shiki-light) !important;
    background-color: var(--shiki-light-bg) !important;
    font-style:       var(--shiki-light-font-style) !important;
    font-weight:      var(--shiki-light-font-weight) !important;
  }

  /* ─── Code block light-mode polish ─────────────────────── */
  [data-theme='light'] pre {
    border-color: #cdd0da;  /* catppuccin-latte surface2 — closer to the theme */
    box-shadow: inset 0 1px 6px rgba(76, 79, 105, 0.06);
  }

  /* ─── Code block chrome — theme backgrounds ──────────────── */
  /* These match the Shiki theme bg colours exactly */
  .ln,
  .code-toolbar {
    background-color: #22272e; /* github-dark-dimmed bg */
  }
  [data-theme='light'] .ln,
  [data-theme='light'] .code-toolbar {
    background-color: #eff1f5; /* catppuccin-latte bg */
  }
  [data-theme='light'] .code-toolbar {
    border-bottom-color: #cdd0da;
  }

  /* ─── Code scroll area scrollbar ─────────────────────────── */
  .code-scroll-area::-webkit-scrollbar              { height: 3px; width: 3px; }
  .code-scroll-area::-webkit-scrollbar-track        { background: transparent; }
  .code-scroll-area::-webkit-scrollbar-thumb        { background: var(--color-border); border-radius: 999px; }
  .code-scroll-area::-webkit-scrollbar-thumb:hover  { background: var(--color-gold-dim); }
  .code-scroll-area::-webkit-scrollbar-corner       { background: transparent; }

  /* ─── Base ───────────────────────────────────────────────── */
  html {
    background-color: var(--color-bg);
    color: var(--color-text);
    font-family: var(--font-sans);
    font-size: 16px;
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    scroll-behavior: smooth;
  }

  body {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }

  /* ─── Scrollbar ──────────────────────────────────────────── */
  ::-webkit-scrollbar              { width: 4px; }
  ::-webkit-scrollbar-track        { background: var(--color-bg); }
  ::-webkit-scrollbar-thumb        { background: var(--color-border); border-radius: 2px; }
  ::-webkit-scrollbar-thumb:hover  { background: var(--color-gold-dim); }

  /* ─── Selection ──────────────────────────────────────────── */
  ::selection {
    background: var(--color-gold-muted);
    color: var(--color-gold);
  }

  /* ─── Typography ─────────────────────────────────────────── */

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-sans);
    font-weight: 600;
    line-height: 1.25;
    color: var(--color-text);
  }

  /* Display serif — applied explicitly on hero / post-title classes */
  .display-serif {
    font-family: var(--font-serif);
    font-weight: 400;
    font-optical-sizing: auto;
    letter-spacing: -0.02em;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  p {
    line-height: 1.8;
  }

  code {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 3px;
    padding: 0.1em 0.35em;
    color: var(--color-gold);
  }

  pre {
    font-family: var(--font-mono);
    font-size: var(--code-font-size);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: var(--space-6);
    overflow-x: auto;
    line-height: 1.65;
    margin: var(--space-6) 0;

    /* Firefox */
    scrollbar-width: thin;
    scrollbar-color: var(--color-border) transparent;
  }

  /* Webkit: thin horizontal scrollbar for code blocks */
  pre::-webkit-scrollbar              { height: 3px; width: 3px; }
  pre::-webkit-scrollbar-track        { background: transparent; }
  pre::-webkit-scrollbar-thumb        { background: var(--color-border); border-radius: 999px; }
  pre::-webkit-scrollbar-thumb:hover  { background: var(--color-gold-dim); }
  pre::-webkit-scrollbar-corner       { background: transparent; }

  pre code {
    background: transparent;
    border: none;
    padding: 0;
    color: var(--color-text-dim);
    font-size: inherit;
  }

  blockquote {
    border-left: 2px solid var(--color-gold);
    padding-left: var(--space-6);
    margin: var(--space-6) 0;
    color: var(--color-text-dim);
    font-style: italic;
    font-family: var(--font-serif);
    font-optical-sizing: auto;
    font-size: 1.2rem;
    line-height: 1.6;
  }

  hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--space-8) 0;
  }

  img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
  }

  th, td {
    border: 1px solid var(--color-border);
    padding: var(--space-2) var(--space-4);
    text-align: left;
  }

  th {
    background: var(--color-surface);
    color: var(--color-gold);
    font-family: var(--font-mono);
    font-weight: 500;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  /* ─── Reading preference utilities ─────────────────────── */
  .hide-reading-time .reading-time           { display: none !important; }
  .wrap-code .code-scroll-area               { overflow-x: clip !important; }
  .wrap-code pre code                        { white-space: pre-wrap !important; }
  .hide-lang-label .code-lang-label          { display: none !important; }
  .hide-line-numbers .ln                     { display: none !important; }
  .hide-line-numbers .code-grid              { grid-template-columns: 1fr !important; }

  /* ─── Header: hide wordmark when hero is visible ────────── */
  .header--hero-visible .wordmark-text,
  .header--hero-visible .byline {
    opacity: 0 !important;
    pointer-events: none;
    transform: translateY(-4px);
  }

  /* ─── Utility ────────────────────────────────────────────── */
  .container {
    width: 100%;
    max-width: var(--max-width);
    margin-inline: auto;
    padding-inline: var(--space-6);
  }

  .container--wide {
    max-width: var(--max-width-wide);
  }
</style>
